<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/black">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    >
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    >
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@android:color/black">
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
                <no.lundesgaard.sudokufeud.sudokufeud_android.views.SquareGridView
                        android:id="@+id/square9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/black"
                        android:layout_weight="1"
                        android:numColumns="3"
                        android:verticalSpacing="2dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/notBoard"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:background="@android:color/background_light"
                >

            <RadioGroup
                        android:id="@+id/radioGroupTiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        >
                    <RadioButton
                            android:id="@+id/tile1"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile2"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile3"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile4"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile5"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile6"
                            style="@style/tile"
                            />
                    <RadioButton
                            android:id="@+id/tile7"
                            style="@style/tile"
                            />
            </RadioGroup>
            <RelativeLayout
                    android:id="@+id/buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/radioGroupTiles"
                    >
                <Button
                        android:id="@+id/buttonSubmit"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_submit_gradient"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

