<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <gradient
                    android:startColor="#B0B0AE"
                    android:centerColor="#787878"
                    android:endColor="#000000"
                    android:angle="270" />
            <corners android:radius="1dp"/>
            <stroke android:width="1dp"
                    android:color="#000000"/>
        </shape>
    </item>

    <item android:state_checked="true"> <!-- checked -->
        <shape>
            <gradient
                    android:startColor="#B0B0AE"
                    android:centerColor="#787878"
                    android:endColor="#000000"
                    android:angle="270" />
            <corners android:radius="1dp"/>
            <stroke android:width="1dp"
                    android:color="#000000"/>
        </shape>
    </item>

    <item>      <!-- default -->
        <shape>
            <gradient
                    android:startColor="#FFFFFF"
                    android:centerColor="#EBEBEB"
                    android:endColor="#B0B0AE"
                    android:angle="270"
                    />
            <corners android:radius="1dp"/>
            <stroke android:width="1dp"
                    android:color="#000000"/>
        </shape>
    </item>
</selector>