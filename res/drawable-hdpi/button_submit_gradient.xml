<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <gradient
                    android:startColor="#A7EAFC"
                    android:centerColor="#92CEDE"
                    android:endColor="#6EB8CC"
                    android:angle="270" />
            <corners android:radius="1dp"/>
            <stroke android:width="1dp"
                    android:color="#37ACCC"/>
        </shape>
    </item>
    <item>      <!-- default -->
        <shape>
            <gradient
                    android:startColor="#6BD5F2"
                    android:centerColor="#56BBD6"
                    android:endColor="#37ACCC"
                    android:angle="270"
                    />
            <corners android:radius="1dp"/>
            <stroke android:width="1dp"
                    android:color="#267E96"/>
        </shape>
    </item>
</selector>